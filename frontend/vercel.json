{
    "functions": {
        "src/pages/*.html": {
            "runtime": "@vercel/static"
        }
    },
    "rewrites": [
        {
            "source": "/",
            "destination": "/index.html"
        },
        {
            "source": "/animals",
            "destination": "/src/pages/animals.html"
        },
        {
            "source": "/report",
            "destination": "/src/pages/report.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}